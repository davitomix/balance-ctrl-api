	"item": [
		{
			"name": "Get balances",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "b76bddbd-a418-41eb-b82f-3038f1f85077",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"  pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Returns balances\", function () {",
							"  pm.expect(pm.response).not.to.equal(null);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{url}}/",
					"host": [
						"{{url}}"
					],
					"path": [
						""
					]
				}
			},
			"response": []
		},
		{
			"name": "Create Balance",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"id": "6dc4868f-4c0d-44da-b0d3-5dc40a4aecfb",
						"exec": [
							"let randNumber = \"{{$randomInt}}\";",
							"let randomTitle = \"{{$randomFirstName}}\";",
							"let randCategory = \"{{$randomDepartment}}\"",
							"pm.globals.set(\"e_user_id\", randNumber)",
							"pm.globals.set(\"e_title\", randomTitle);",
							"pm.globals.set(\"e_total\", randNumber);",
							"pm.globals.set(\"e_category\", randCategory);",
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"id": "983c842d-4586-4220-ac39-5a0d2425e269",
						"exec": [
							"pm.test(\"Status code is 201\", function () {",
							"  pm.response.to.have.status(201);",
							"});",
							"",
							"const responseJson = pm.response.json();",
							"pm.globals.set(\"e_id\", responseJson.id);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "{{url}}/?user_id={{e_user_id}}&title={{e_title}}&total={{e_total}}&category={{e_category}}",
					"host": [
						"{{url}}"
					],
					"path": [
						""
					],
					"query": [
						{
							"key": "user_id",
							"value": "{{e_user_id}}"
						},
						{
							"key": "title",
							"value": "{{e_title}}"
						},
						{
							"key": "total",
							"value": "{{e_total}}"
						},
						{
							"key": "category",
							"value": "{{e_category}}"
						}
					]
				}
			},
			"response": []
		},
